<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/jifen_guan"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/jiuye_iv_image"
            android:layout_width="144dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@mipmap/error_img_big"
            android:background="@drawable/card_bg"
            android:padding="1dp"
            android:layout_margin="5dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/jiuyt_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="是否看到奇偶陪我发了手机开发结束了房间数会计法世纪东方了实际发"
            android:textColor="@color/title_lab" />

        <LinearLayout
            android:id="@+id/tag_ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tag1_tv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@drawable/jy_tag_bg"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/lvse"
                android:textSize="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tag2_tv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/jy_tag_bg"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/lvse"
                android:textSize="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tag3_tv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/jy_tag_bg"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/lvse"
                android:textSize="12dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_jiuye_tiem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2016年09月12发布" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jiuye_tv_shoucang"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/dianzanshuliang"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="234"
                    android:textColor="@color/card_bulue"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/jiuyt_tv_pinglun"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/liuyansuliang"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="234"
                    android:textColor="@color/card_bulue"
                    android:textSize="10sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>