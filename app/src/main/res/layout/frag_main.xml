<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_srl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <net.tsz.afinal.view.TotalScrollView
            android:id="@+id/main_sl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/main_title_ban"
                    android:layout_width="match_parent"
                    android:layout_height="170dp" />

                <TextView
                    style="@style/main_tag"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/white"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="资       讯"
                    android:textSize="16sp" />


                <wai.gr.cla.method.OnlyMeasureListView
                    android:id="@+id/zu_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/zu_tv"
                    android:background="@android:color/white"
                    android:divider="@color/white"
                    android:dividerHeight="0dp"
                    android:paddingLeft="10dp" />

                <LinearLayout
                    android:id="@+id/jz_ll"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:background="@android:color/white">

                    <TextView
                        style="@style/main_tag"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="讲座直播"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/free_more_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="查看全部"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"  />
                </LinearLayout>


                <wai.gr.cla.method.OnlyMeasureGridView
                    android:id="@+id/free_gv"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/zu_tv"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    android:numColumns="3"
                    android:paddingLeft="5dp" />

                <LinearLayout
                    android:id="@+id/jp_ll"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:background="@android:color/white">

                    <TextView
                        style="@style/main_tag"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="精品课程"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tj_more_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="查看全部"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"  />
                </LinearLayout>


                <wai.gr.cla.method.OnlyMeasureGridView
                    android:id="@+id/class_gv"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/zu_tv"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    android:numColumns="3"
                    android:paddingLeft="5dp"
                    />
                <LinearLayout
                    android:id="@+id/dy_ll"

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/main_tag"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="资格证考试"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dy_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="查看全部"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <wai.gr.cla.method.OnlyMeasureGridView
                    android:id="@+id/question_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/zu_tv"
                    android:layout_marginTop="1dp"
                    android:numColumns="3"
                    android:background="@android:color/white" />
                <LinearLayout
                    android:id="@+id/live_ll"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:background="@android:color/white">

                    <TextView
                        style="@style/main_tag"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="在线直播"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/live_more_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="查看全部"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>


                <wai.gr.cla.method.OnlyMeasureGridView
                    android:id="@+id/live_gv"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/zu_tv"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    android:numColumns="3"
                    android:paddingLeft="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/main_tag"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="模拟考场"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/ks_more_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="查看全部"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"  />
                </LinearLayout>


                <wai.gr.cla.method.OnlyMeasureListView
                    android:id="@+id/text_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/zu_tv"
                    android:background="@android:color/white"
                    android:divider="@color/white"
                    android:dividerHeight="0dp"
                    android:paddingLeft="10dp" />
            </LinearLayout>
        </net.tsz.afinal.view.TotalScrollView>

        <RelativeLayout
            android:id="@+id/title_rl"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#006cb5">

            <TextView
                android:id="@+id/main_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/search_rl"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/right_iv"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:src="@mipmap/home_button_search" />
            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
