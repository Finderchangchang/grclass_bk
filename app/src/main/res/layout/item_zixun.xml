<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingLeft="10dp">


    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/list_item_line" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_button" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/user_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/cursevideo_share_qq"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教师专栏"
                android:background="@color/colorPrimary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingBottom="3dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="                    2016年河北省专接本选拨考试公共课最低控制分数线"
                android:textColor="@color/title_zx"
                android:layout_marginTop="3dp"
                android:lineSpacingExtra="3dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2016年12月11日发布"
                android:textColor="@color/title_bar_bg" />

            <LinearLayout
                android:id="@+id/zixun_item_xihuan"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:background="@color/lv_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/cursevideo_share_qq"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/sc_tv"
                    android:layout_width="40dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/dianzanshuliang"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:text="99"
                    android:textColor="@color/login_bg"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_zixun_ll_dot"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="10dp"
                android:background="@color/lv_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/liuyansuliang"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:text="32"
                    android:textColor="@color/login_bg"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>